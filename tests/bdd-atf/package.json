{
  "name": "bdd-atf",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "cleanup": "rimraf reports/*",
    "deploy-setup": "./scripts/deploy.sh",
    "test": "yarn cleanup && cucumber-js --config cucumber.ts",
    "test:smoke": "yarn cleanup && cucumber-js --config cucumber.ts --tags @smoke",
    "test:only": "yarn cleanup && cucumber-js --config cucumber.ts --tags @only",
    "cucumber": "cucumber-js ./features/**/*.feature --require-module ts-node/register --require ./support/**/*.ts --require ./steps/**/**/*.ts",
    "report": "ts-node ./reporter/cucumber-report.ts"
  },
  "dependencies": {
    "@cucumber/cucumber": "^8.7.0",
    "@playwright/test": "^1.27.1",
    "clipboardy": "^2.3.0",
    "cucumber-html-reporter": "^5.5.0",
    "lodash.clonedeep": "^4.5.0",
    "playwright": "^1.27.1"
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@cucumber/pretty-formatter": "^1.0.0",
    "allure-cucumberjs": "^2.0.0-beta.18",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1"
  },
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "rules": {
      "react/react-in-jsx-scope": "off",
      "no-console": "off"
    }
  }
}
