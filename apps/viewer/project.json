{
  "name": "viewer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/viewer/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nxext/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/viewer",
        "baseHref": "/",
        "configFile": "apps/viewer/vite.config.ts"
      },
      "configurations": {
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/viewer/src/environments/environment.ts",
              "with": "apps/viewer/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nxext/vite:dev",
      "options": {
        "outputPath": "dist/apps/viewer",
        "baseHref": "/",
        "configFile": "apps/viewer/vite.config.ts"
      },
      "configurations": {
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/viewer/src/environments/environment.ts",
              "with": "apps/viewer/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite preview -c apps/viewer/vite.config.ts"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/viewer/**/*.{ts,js,tsx,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/viewer/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "e2e": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "yarn nx test-viewer e2e-test --skip-nx-cache --report=./apps/e2e-test/reports/viewer/",
          "yarn nx publisher-viewer e2e-test --report=./apps/e2e-test/reports/viewer-pub-view/"
        ]
      }
    },
    "e2e-report": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "yarn nx test-report e2e-test --skip-nx-cache --report=./apps/e2e-test/reports/viewer/",
          "yarn nx test-report e2e-test --skip-nx-cache --report=./apps/e2e-test/reports/viewer-pub-view/"
        ]
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bash apps/deploy.sh 'dist/apps/viewer' 'cosmic-dango-2cc8f7'"
      }
    }
  },
  "tags": []
}
