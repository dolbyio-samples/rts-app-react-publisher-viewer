{
  "name": "bdd-test",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/bdd-test/src",
  "projectType": "application",
  "targets": {
    "cleanup": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["rimraf ./apps/bdd-test/reports/*"]
      }
    },
    "launch-server": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["./apps/bdd-test/scripts/launch_server.sh"]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["cucumber-js --config ./apps/bdd-test/cucumber.ts"]
      },
      "dependsOn": ["cleanup"]
    },
    "test-report": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["yarn ts-node ./apps/bdd-test/reporter/cucumber-report.ts"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/bdd-test/**/*.ts"]
      }
    }
  },
  "tags": []
}
