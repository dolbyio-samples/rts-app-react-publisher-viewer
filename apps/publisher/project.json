{
  "name": "publisher",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/publisher/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nxext/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/publisher",
        "baseHref": "/",
        "configFile": "apps/publisher/vite.config.ts"
      },
      "configurations": {
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/publisher/src/environments/environment.ts",
              "with": "apps/publisher/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nxext/vite:dev",
      "options": {
        "outputPath": "dist/apps/publisher",
        "baseHref": "/",
        "configFile": "apps/publisher/vite.config.ts"
      },
      "configurations": {
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/publisher/src/environments/environment.ts",
              "with": "apps/publisher/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite preview -c apps/publisher/vite.config.ts"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/publisher/**/*.{ts,js,tsx,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/publisher/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "e2e": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "yarn nx launch-server bdd-test --skip-nx-cache",
          "yarn nx test-publisher bdd-test --skip-nx-cache --report=./apps/bdd-test/reports/publisher/"
        ]
      }
    },
    "e2e-report": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": ["yarn nx test-report bdd-test --skip-nx-cache --report=./apps/bdd-test/reports/publisher/"]
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bash apps/deploy.sh 'dist/apps/publisher' 'astounding-lily-fa33fc'"
      }
    }
  },
  "tags": []
}
